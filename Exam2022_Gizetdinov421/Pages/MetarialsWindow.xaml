<Window x:Class="Exam2022_Gizetdinov421.Pages.MetarialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam2022_Gizetdinov421.Pages"
        mc:Ignorable="d"
        Title="MetarialsWindow" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="SteelBlue">
    <Grid>
        <ListView x:Name="MaterialLV" Width="550" Height="300"  Background="Transparent" BorderBrush="SkyBlue" Margin="125,75,125,75">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="14" Text="{Binding Name_Phone}" Foreground="SkyBlue"/>
                        <TextBlock FontSize="14" Text="{Binding Cost}" Foreground="SkyBlue"/>
                        <TextBlock FontSize="14" Text="{Binding Type_Phone.Name_Type_Phone}" Foreground="SkyBlue"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
